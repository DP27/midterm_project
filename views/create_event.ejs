<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <!-- Meta Information -->
    <title>Schoodle - Create-Event</title>

    <!-- External CSS -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    
    <!-- App CSS -->
    
    <link rel="stylesheet" href="" type="text/css" />
    <link rel="stylesheet" href="" type="text/css"/>
    <link rel="stylesheet" href="" type="text/css"/>
    

    <!-- External JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
   
    <!-- App JS -->
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src=""></script>
  </head>

  <body>

    <!-- Top nav bar (fixed) -->
    <nav id="nav-bar">
            <% include ./partials/_nav.ejs %>
    </nav>
  
    <!-- Page-specific (main) content here -->
    <main class="container">
      <form action="/create" method="post">
        <section class="name">
          <h4>Name:
              <input type="string" name="name" placeholder="Name">
          </h4>
        </section>
        <section class="email">
          <h4>Email:
              <input type="email" name="email" placeholder="username@domain.com">
          </h4>
        </section>
        <section class="title">
          <h4>Event Title:
              <input type="string" name="title" placeholder="Title">
          </h4>
        </section>
        <section class="description">
          <h4>Description:
              <textarea name="text" placeholder="What's the event about?"></textarea>
          </h4>
        </section>
        <section class="location">
          <h4>Location:
            <input class='address' type="text" name="location-field" placeholder="Location">
            <button id='location' type="button">Submit</button>
          </h4>
          <div id="map" style="width:70%;height:300px;"></div>
            <script>
            
              function initMap() {
                var uluru = {lat: 43.6718, lng: -79.4668};
                var map = new google.maps.Map(document.getElementById('map'), {
                  zoom: 4,
                  center: uluru
                });
                var marker = new google.maps.Marker({
                  position: uluru,
                  map: map
                });
              }
            </script>
            <script async defer
              src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDGGhzVWA98mR7ZYK31u_ZgsDOtAS_YIqI&callback=initMap">
            </script>
        </section>
        <section class="timeslot-first">
            <h4>Timeslot(Most Preferred):
                <input id="date" name="dateslot" type="date">
                <input id="time" name="timeslot" type="time">
            </h4>
        </section>
        <section class="submit">
          <button type="button">Submit</button>
        </section>
           
        
          
      </form>
    
      
    </main>

  </body>
</html>
